<!-- AddModuleView.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CanvasRemake.Views.AddModuleView"
             Title="Add Module">

    <StackLayout Padding="20">
        <Entry x:Name="ModuleNameEntry" Placeholder="Module Name" />
        <Editor x:Name="ModuleDescriptionEditor" Placeholder="Module Description" AutoSize="TextChanges" />

        <ListView x:Name="ContentItemListView" ItemsSource="{Binding ContentItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Name}" VerticalOptions="Center" />
                            <Button Text="Remove" Clicked="OnRemoveContentItemClicked" CommandParameter="{Binding}" HorizontalOptions="EndAndExpand" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Entry x:Name="ContentItemNameEntry" Placeholder="Content Item Name" />
        <Editor x:Name="ContentItemDescriptionEditor" Placeholder="Content Item Description" AutoSize="TextChanges" />

        <Button Text="Add Content Item" Clicked="OnAddContentItemClicked" />
        <Button Text="Save" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>