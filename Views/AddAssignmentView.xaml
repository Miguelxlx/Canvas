<!-- AddAssignmentView.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CanvasRemake.Views.AddAssignmentView"
             Title="Add Assignment">

    <StackLayout Padding="20">
        <Entry x:Name="AssignmentNameEntry" Placeholder="Assignment Name" />
        <Editor x:Name="AssignmentDescriptionEditor" Placeholder="Assignment Description" AutoSize="TextChanges" />
        <Entry x:Name="AssignmentPointsEntry" Placeholder="Points" Keyboard="Numeric" />
        <DatePicker x:Name="AssignmentDueDatePicker" Format="MM/dd/yyyy" />

        <Button Text="Save" Clicked="OnSaveClicked" Margin="0,10,0,0" />
    </StackLayout>
</ContentPage>