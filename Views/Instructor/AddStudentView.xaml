<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CanvasRemake.Views.AddStudentView"
             Title="Add Student">
    <StackLayout Padding="20">
        <Label Text="Student Name" />
        <Entry Text="{Binding StudentName}" />
        <Label Text="Student ID" />
        <Entry Text="{Binding StudentID}" />
        <Label Text="Student Classifications" />
        <Entry Text="{Binding StudentClassification}" />
        <Button Text="Save" Command="{Binding SaveCommand}" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>