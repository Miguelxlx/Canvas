<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CanvasRemake.Views.AddStudentView"
             Title="Add Student">

    <StackLayout Padding="20">
        <Label Text="Student Name" />
        <Entry x:Name="StudentNameEntry" />

        <Label Text="Student ID" />
        <Entry x:Name="StudentIDEntry" />

        <Label Text="Student Classifications" />
        <Entry x:Name="StudentClassificationEntry" />
   

        <Button Text="Save" Clicked="OnSaveClicked" Margin="0,20,0,0" />
    </StackLayout>

</ContentPage>