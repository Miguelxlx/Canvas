<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CanvasRemake.Views.SubmitAssignmentView"
             Title="Submit Assignment">
    <StackLayout Padding="20">
        <Label Text="{Binding Assignment.Name}" FontSize="24" />
        <Label Text="{Binding Assignment.Description}" FontSize="16" />
        <Label Text="{Binding StudentName}" FontSize="18" />
        <Editor Text="{Binding SubmissionText}" HeightRequest="200" />
        <Button Text="Submit" Command="{Binding SubmitCommand}" />
    </StackLayout>
</ContentPage>