<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CanvasRemake.Views.LinkStudentsView"
             Title="Link Students to Course">
    <StackLayout Padding="20">
        <Label Text="Enter Course Code" FontSize="18" />
        <Entry Text="{Binding CourseCode}" Placeholder="Course Code" />
        <Label Text="Enter Student ID" FontSize="18" />
        <Entry Text="{Binding StudentId}" Placeholder="Student ID" />
        <Button Text="Link Student" Command="{Binding LinkStudentCommand}" Margin="0,20,0,0" />
        <Button Text="Remove Student" Command="{Binding RemoveStudentCommand}" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>